<% if current_user.user_type == "Shipping" %>

<div class="indexForm">
<h2 id="indexTitle"> View All Boats Here </h2>
<%=link_to 'Add new', new_boat_path(), :class=>"btn-success btn btn-github" %><br>
<% @boats.each do |boat| %>
	<div class="formFields">
			<br> Name: <%= boat.name %> <br><br>
					Location: <%= boat.location %> <br><br>
					Available Containers: <%= boat.container %><br><br>		
		<%= image_tag boat.avatar.url(:thumb) %><br>
		<a href="boats/<%= boat.id%>">View This Ship</a>
	</div>
<% end %>

</div>



<% else %>

	<h1>Error: You do not have access to view this page</h1>

<% end %>

