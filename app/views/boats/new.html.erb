<% if current_user.user_type == "Shipping" %>

	<%= form_for @boat, html: {multipart: true} do |f| %>
	<div class="formField">
		
		<%= f.label :name %>: <br>
		<%= f.text_field :name %> <br>
		<%= f.label "Number of Containers" %>: <br>
		<%= f.text_field :container %> <br>
		<%= f.label :location %>: <br>
		<%= hidden_field_tag 'user', 2 %>
		<%= f.select :location, [["Thor's Well, Oregon, USA", "Thor's Well, Oregon, USA"], ["The Bermuda Triangle, North Atlantic Ocean", "The Bermuda Triangle, North Atlantic Ocean"], ["Whale Bone Alley, Siberia", "Whale Bone Alley, Siberia"], ["The Giant's Causeway, Northern Ireland", "The Giant's Causeway, Northern Ireland"], ["Hvitserkur, Northern Iceland", "Hvitserkur, Northern Ireland"], ["Algarve, Portugal", "Algarve, Portugal"], ["Rio de Janiero, Brazil", "Rio de Janeiro, Brazil"], ["Galapagos Islands, Ecuador", "Galapagos Islands, Ecuador"], ["Queensland, Australia", "Queensland, Australia"], ["Benoa (Bali), Indonesia", "Benoa (Bali), Indonesia"], ["New York, NY, USA", "New York, NY, USA"], ["New Haven, CT, USA", "New Haven, CT, USA"]] %> <br>
		<br>
		<%= f.file_field :avatar %> <br>
	</div>
		<%= f.submit "Create New Boat" %>
	<% end %>

<% else %>

	<h1>Error: You do not have access to view this page</h1>

<% end %>
