<div id="editUser">
<h2 class="profileEditTitle"> Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "First Name" %>: 
    <%= f.text_field :firstname, autofocus: true %> <br>
    <%= f.label "Last Name" %>: 
    <%= f.text_field :lastname, autofocus: true %> <br>
    <%= f.label "Username" %>: 
    <%= f.text_field :username, autofocus: true %> <br>
    <%= f.label "DOB" %>:
    <%= f.text_field :dob, autofocus: true %> <br>
    <%= f.label "Gender" %>: 
    <%= f.text_field :gender, autofocus: true %> <br>
    
  </div>

  <div class="field">
    <%= f.label :email %>:
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>: <br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>: <br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %><i> (enter current password to confirm changes):</i> <br>
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update", :class => 'btn btn-github' %>
  </div>
<% end %>
</div>

<br>
<br>
<br>
<br>


<div class="cancelUser">
<h3 class="editUserTitle">Cancel my account</h3>

<p>Unhappy with your experience? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-github' %></p>
<br>
<br>

<%= link_to "Back", :back %>
</div>

